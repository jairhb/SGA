@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="alert alert-danger text-center">
        <h3 class="mb-3">Ocurrió un error</h3>
        <p>
            @ViewBag.Error ?? "Ocurrió un error inesperado. Por favor, intenta de nuevo más tarde."
        </p>
        <a href="@Url.Action("Crear", "Inscripciones")" class="btn btn-primary mt-3">Volver al inicio</a>
    </div>
</div>
