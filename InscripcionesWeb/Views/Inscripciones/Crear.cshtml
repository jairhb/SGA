@model InscripcionesWeb.DTOs.InscripcionDTO

@{
    ViewData["Title"] = "Inscripci√≥n a Programa";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Crear" method="post">
    <div class="form-group">
        <label asp-for="IdPrograma" class="control-label">Programa:</label>
        <select asp-for="IdPrograma" class="form-control" asp-items="ViewBag.Programas">
            <option value="">-- Seleccione un programa --</option>
        </select>
        <span asp-validation-for="IdPrograma" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Nombre" class="control-label">Nombre del Estudiante:</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Correo" class="control-label">Correo del Estudiante:</label>
        <input asp-for="Correo" class="form-control" />
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Inscribirse</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


