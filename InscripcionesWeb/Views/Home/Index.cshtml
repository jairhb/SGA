@{
    ViewData["FullWidth"] = true;
    ViewData["HideLayoutNavbar"] = true;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- HERO CON NAVBAR ESTILO UMNG -->
<div class="position-relative" style="height: 100vh; overflow: hidden;">
    <!-- Imagen de fondo -->
    <img src="/images/banner-policia.jpg"
         class="w-100 h-100 object-fit-cover"
         alt="Banner Policía" />

    <!-- Superposición oscura -->
    <div class="position-absolute top-0 start-0 w-100 h-100"
         style="background-color: rgba(0,0,0,0.6); z-index: 1;"></div>

    <!-- Navbar flotante -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-transparent position-absolute top-0 w-100" style="z-index: 2;">
        <div class="container-fluid px-4">
            <a class="navbar-brand fw-bold text-white" href="#">
                <img src="/images/logo-policia.png" alt="Logo Policía" height="40" class="me-2" />
                Policía Nacionalde Colombia
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menu">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="menu">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link text-white" href="/">Inicio</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="/Inscripciones/Crear">Inscripción</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="#">Oferta Académica</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="#">Contacto</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Texto central -->
    <div class="position-absolute top-50 start-50 translate-middle text-center text-white px-3" style="z-index: 2;">
        <p class="lead mb-2">Acreditada en alta calidad institucional</p>
        <h3 class="fw-bold text-white fs-4 text-shadow mb-3">
    Inscripción a programas académicos<br />
    Dirección de Educación Policial
</h3>
        <p class="lead">Inscripción a programas de formación para el servicio del país</p>
        <div class="d-flex justify-content-center gap-3 mt-4 flex-wrap">
            <a href="/Inscripciones/Crear" class="btn btn-warning btn-lg fw-semibold">Inscribirse</a>
            <a href="#" class="btn btn-outline-light btn-lg">Explorar Oferta</a>
        </div>
    </div>
</div>

<!-- SECCIONES INFORMATIVAS -->
<div class="container py-5">
    <div class="row g-4 text-center">
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Oferta Académica</h5>
                    <p class="card-text">Consulta los programas disponibles para formación policial, técnica y profesional.</p>
                    <a href="#" class="btn btn-outline-primary">Ver más</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Noticias</h5>
                    <p class="card-text">Entérate de los últimos eventos, conferencias y actividades académicas.</p>
                    <a href="#" class="btn btn-outline-primary">Leer noticias</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Contacto</h5>
                    <p class="card-text">¿Tienes dudas? Escríbenos para recibir atención personalizada.</p>
                    <a href="#" class="btn btn-outline-primary">Contáctanos</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- FOOTER -->
<footer class="footer text-white text-center py-3" style="background-color: #013764;">
    <p class="mb-0">&copy; @DateTime.Now.Year Policía Nacional de Colombia - Todos los derechos reservados</p>
    <p >Proyecto Implementación Centrada en Arquitectura Universidad Javeriana Jair</p>
</footer>


