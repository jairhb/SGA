@{
    ViewData["FullWidth"] = true;
    ViewData["HideLayoutNavbar"] = true;
    Layout = null; // Si deseas que este index no use el _Layout general
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Sistema Académico - Policía Nacional</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        html, body {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            overflow-x: hidden;
        }

        .object-fit-cover {
            object-fit: cover;
        }

        .card:hover {
            transform: translateY(-5px);
            transition: 0.3s ease-in-out;
        }

        footer {
            margin-top: 4rem;
        }
    </style>
</head>
<body>

    <!-- HERO -->
    <div class="position-relative w-100" style="height: 100vh; overflow: hidden;">
        <!-- Imagen de fondo -->
        <img src="/images/banner-policia.jpg"
             class="w-100 h-100 object-fit-cover position-absolute top-0 start-0"
             alt="Banner Policía" />

        <!-- Capa oscura -->
        <div class="position-absolute top-0 start-0 w-100 h-100"
             style="background-color: rgba(0,0,0,0.65); z-index: 1;"></div>

        <!-- NAVBAR -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-transparent position-absolute top-0 w-100 px-4" style="z-index: 2;">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold d-flex align-items-center text-white" href="#">
                    <img src="/images/logo-policia.png" alt="Logo Policía" height="40" class="me-2" />
                    Policía Nacional de Colombia
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menu">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="menu">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link text-white" href="/">Inicio</a></li>
                        <li class="nav-item"><a class="nav-link text-white" href="/Inscripciones/Crear">Inscripción</a></li>
                        <li class="nav-item"><a class="nav-link text-white" href="#">Oferta Académica</a></li>
                        <li class="nav-item"><a class="nav-link text-white" href="#">Contacto</a></li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- TEXTO CENTRAL -->
        <div class="position-absolute top-50 start-50 translate-middle text-center text-white px-3" style="z-index: 2;">
            <p class="lead mb-1">Acreditada en alta calidad institucional</p>
            <h3 class="fw-bold fs-4 mb-3" style="text-shadow: 2px 2px 4px rgba(0,0,0,0.8);">
                Inscripción a programas académicos<br />
                Dirección de Educación Policial
            </h3>
            <p class="lead mb-4">Formación al servicio del país</p>
            <div class="d-flex justify-content-center gap-3 flex-wrap">
                <a href="/Inscripciones/Crear" class="btn btn-warning btn-lg px-4 fw-semibold shadow">Inscribirse</a>
                <a href="#" class="btn btn-outline-light btn-lg px-4 shadow">Explorar Oferta</a>
            </div>
        </div>
    </div>

    <!-- SECCIONES -->
    <div class="container py-5">
        <div class="row g-4 text-center">
            <div class="col-md-4">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title">Oferta Académica</h5>
                        <p class="card-text">Consulta programas de formación policial, técnica y profesional.</p>
                        <a href="#" class="btn btn-outline-primary">Ver más</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title">Noticias</h5>
                        <p class="card-text">Eventos, conferencias y novedades académicas recientes.</p>
                        <a href="#" class="btn btn-outline-primary">Leer noticias</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title">Contacto</h5>
                        <p class="card-text">¿Tienes dudas? Recibe atención personalizada aquí.</p>
                        <a href="#" class="btn btn-outline-primary">Contáctanos</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- FOOTER -->
    <footer class="bg-dark text-white text-center py-4">
        <p class="mb-1">&copy; @DateTime.Now.Year Policía Nacional de Colombia - Todos los derechos reservados</p>
        <small>Proyecto Arquitectura de Software - Universidad Javeriana - Jair H.</small>
    </footer>
</body>
</html>

</footer>


